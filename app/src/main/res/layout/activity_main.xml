<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/backgr1"
    >

    <Button
        android:id="@+id/buttonNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/main_buttons"
        android:text="Now"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonMyShifts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/main_buttons"
        android:text="My Shifts"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonWorkSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/main_buttons"
        android:text="Work Settings"
        android:textColor="#FFFFFF" />

</LinearLayout>