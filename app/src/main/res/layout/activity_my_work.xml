<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgr1"
    tools:context=".MyWorkActivity">


    <EditText
        android:id="@+id/hourlyWagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:ems="10"
        android:hint="hourlyWage"
        android:inputType="number" />

    <EditText
        android:id="@+id/breakTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:ems="10"
        android:hint="breakTime"
        android:inputType="time" />

    <EditText
        android:id="@+id/extraHoursText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:ems="10"
        android:hint="extraHours"
        android:inputType="number" />

    <EditText
        android:id="@+id/travelAllowanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:ems="10"
        android:hint="travelAllowance"
        android:inputType="number" />

    <EditText
        android:id="@+id/holidaysAndSaturdaysText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:ems="10"
        android:hint="holidaysAndSaturdays"
        android:inputType="number" />

    <Button
        android:id="@+id/donebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:textColor="#FFFFFF"
        android:layout_margin="25dp"
        android:text="Done" />

</LinearLayout>